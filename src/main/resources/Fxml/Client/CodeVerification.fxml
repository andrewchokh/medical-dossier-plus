            <Button fx:id="verifyButton" mnemonicParsing="false" styleClass="primary_button" text="Verify" />
         </children>
      </VBox>
   </children>
   <stylesheets>
      <URL value="@../../Styles/verification.css" />
      <URL value="@../../Styles/controls.css" />
   </stylesheets>
